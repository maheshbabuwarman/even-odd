#include <iostream>
using namespace std;

int main()
{
	int num[20], odd = 0, even = 0,zero=0;
	
	cout << " enter 20 integer : " << endl;
	for (int i = 0; i <20; i++) {
		cin >> num[i];
	}

	cout << endl;
  
	for (int i = 0; i < 20; i++) {
		
		cout << num[i] << "   ";
	}

	for (int i = 0; i < 20; i++) {
		if (num[i] % 2 == 0) {
			even++;
		}
		else if (num[i] % 2 != 0) {
			odd++;
		}
		if (num[i] == 0)
			zero++;
	}
	
	cout << "\nThe total even numbers is :  " << even << endl;
	cout << "The total odd numbers is :  " << odd << endl;
  return 0;
	}
